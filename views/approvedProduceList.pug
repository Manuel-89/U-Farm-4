section#main

    header.card-header 
       h4.card-title Produce List
       br
    nav
    #nav-tab.nav.nav-tabs(role='tablist')
       a#nav-profile-tab.nav-item.nav-link(href='/farmerOneRegistration') Register FarmerOne 
    #nav-tabContent.tab-content   
    br
    table.table.table-bordered 
      thread 
             tr      
               th Supplier Id
               th Produce Name
               th Produce Quantity
               th Price
               th Produce Upload date 
               th Mode of delivery 
               th Ward
               th Availability
               th Status     
               th Product Image     
               th Update 
               th Delete
      tbody 
            if products.length 
               each product in products 
                  if product.status == "Approved"
                      tr 
                       td #{product.supplierId}
                       td #{product.produceName}
                       td #{product.produceQuantity}
                       td #{product.price}
                       td #{product.productUploadDate}
                       td #{product.deliveryMode}
                       td #{product.wardName}
                       td #{product.availability}
                       td #{product.status}
                       td
                          img(src="/"+product.productImage, alt="image" width="150px" Height="170px")
                       td 
                          a.btn.btn-primary.btn-block(href='/produce/update/'+product._id) Update 
                       td 
                          a.btn.btn-secondary.btn-block(href='/produce/update/'+product._id) Approve    
                       td 
                            form(method="post" action='/produce/delete')
                            input(type="hidden", placeholder="", name="id", value=product._id)  
                            button.btn.btn-danger.btn-block(type="submit") Delete
    div.form-row 
        div.col.form-group 
          a(class='button', href='/agriculturalOfficerDashboard') Back        
    
    
    
