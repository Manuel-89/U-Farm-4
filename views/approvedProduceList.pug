section#main
.container.justify-content-center
    header.card-header 
       h4.card-title Produce List
       br
    nav
    #nav-tab.nav.nav-tabs(role='tablist')
       a.btn.btn-primary(href='/login') LogOut 
    #nav-tabContent.tab-content   
    br
    table.table.table-bordered 
      thread 
             tr      
               th Produce Name
               th Produce Quantity
               th Price
               th Produce Upload date 
               th Mode of delivery 
               th Availability 
               th Status
               th Product Image  
              
      tbody 
            if products.length 
               each product in products 
                  if product.status == "Approved"
                     tr 
                       td #{product.produceName}
                       td #{product.produceQuantity}
                       td #{product.price}
                       td #{product.productUploadDate}
                       td #{product.deliveryMode}
                       td #{product.availability}
                       td #{product.status}
                       td 
                          img(src="/public/uploads"+product.productImage, alt="image" width="150px" Height="170px")
                       td 
                          a.btn.btn-primary.btn-block(href='produce/order/'+product._id) Buy 
                       td 
                          a.btn.btn-secondary.btn-block(href='/produce/available/'+product._id) Availability   
                       td 
                            
    div.form-row 
        div.col.form-group 
          a(class='button', href='/') Back        
    
    
    
