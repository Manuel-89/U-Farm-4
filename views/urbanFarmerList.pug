section#main
.container.justify-content-center
    header.card-header 
       h4.card-title Farmer One List
       br
    nav
    #nav-tab.nav.nav-tabs(role='tablist')
       a#nav-profile-tab.nav-item.nav-link(href='/registerfarmerOne') Register FarmerOne 
    #nav-tabContent.tab-content   
    br
    table.table.table-bordered 
      thread 
             tr 
               th Full Name
               th NIN
               th Gender
               th Phone Number
               th Period Of Stay
               th Unique ID
               th Ward Name
               th Status
               th Activities
               th Update 
               th Approve
          
      tbody 
            if urbanFarmsrs.length 
               each urbanFarmer in urbanFarmers 
                  
                    tr 
                       td #{urbanFarmer.firstName +" "+ urbanFarmer.lastName}
                       td #{urbanFarmer.NIN}
                       td #{urbanFarmer.gender}
                       td #{urbanFarmer.phoneNumber}
                       td #{urbanFarmer.periodOfStay}
                       td #{urbanFarmer.uniqueId}
                       td #{urbanFarmer.wardName}
                       td #{urbanFarmer.status}
                       td #{urbanFarmer.activitiesUndertaken}
                       td 
                          a.btn.btn-primary.btn-block(href='/urbanFarmer/update/'+urbanFarmer._id)  
                       td
                          a.btn.btn-secondary.btn-block(href='/urbanFarmer/approve/'+urbanFarmer._id) Approve        
