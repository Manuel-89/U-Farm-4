section#productUpload
  .container.justify-content-center
    h3.text-center Product Upload Form
    form.row.g-3(action="/productupload", method="post")
      .row
        .col-md-6
          label.form-label(for="firstName") First Name
          input.form-control#firstName(type="text")
        .col-md-6
          label.form-label(for="lastName") Last Name
          input.form-control#lastName(type="text")
      .row
        .col-md-6
          label.form-label(for="uniqueId") Unique Id
          input.form-control#uniqueId(type="text")
        .col-md-6
          label.form-label(for="NIN") NIN
          input.form-control#NIN(type="text")
      .row
        .col-md-6
          label.form-label(for="productName") Product Name
          input.form-control#productName(type="text")
        .col-md-6
          label.form-label(for="productQuantity") Product Quantity
          input.form-control#productQuantity(type="text")
      .row
        .col-md-4
          label.form-label(for="price") Price
          input.form-control#price(type="text", placeholder)
        .col-md-4
          label.form-label(for="type") Produce Type
          select#produceType.form-select
            option(selected) Choose...
            option Organic
            option Non-Organic
        .col-md-4
          label.form-label(for="inputState") Ward Name
          select#inputState.form-select
            option(selected) Choose...
            option Massaja A.
            option Massaja B.
            option Massaja C.
            option Massaja D.
        div.
          
          
        .row
          .col-md-4.py-4
            .input-group
              label.input-group-text(for="productImage") upload
              input.form-control#productImage(type="file")
          .col-md-4
            label.form-label(for="type") Produce Type
            select#produceType.form-select
              option(selected) Choose...
              option Organic
              option Non-Organic
          .col-md-4
            label.form-label(for="productUploadDate") Date of Upload
            input.form-control#productUploadDate(type="date")
        .col-12.text-center.py-4
          button.btn.btn-primary(type="submit") Upload
