section#productUpload
  .container.justify-content-center
    
    form.row.g-3(action="/productUpload", enctype ="multipart/form-data" method="post")
      h3.text-center Product Upload Form 
      //- #{currentUser.firstName}
      //- .row
      //-   .col-md-6
      //-     label.form-label(for="firstName") First Name
      //-     input.form-control#firstName(type="text" value="")
      //-   .col-md-6
      //-     label.form-label(for="lastName") Last Name
      //-     input.form-control#lastName(type="text" value="")
      .row
        .col-md-6
          label.form-label(for="supplierId") Supplier Id
          select#supplierId.form-select(name="supplierId")
              if currentUser   
                           option(value=currentUser._id) #{currentUser.firstName +" "+ currentUser.lastName}
              
        //-   //- input.form-control#supplierId(name="supplierId" type="text" value="")
        //- //- .col-md-6
        //- //-   label.form-label(for="NIN") NIN
        //- //-   input.form-control#NIN(type="text" value="")
      .row
        .col-md-4
          label.form-label(for="produceName") Produce Name
          input.form-control#produceName(name="produceName" type="text" value="")
        .col-md-4
          label.form-label(for="produceQuantity") Produce Quantity
          input.form-control#produceQuantity(name="produceQuantity" type="text" value="")
        .col-md-4
            label.form-label(for="paymentMethod") Payment Method
            select#deliveryMode.form-select(name="paymentMethod")
              option(selected) Choose...
              option(value="Mobile Money") Mobile Money
              option(value="Cash") Cash
      .row
        .col-md-4
          label.form-label(for="price") Price
          input.form-control#price(type="text", placeholder="" name="price" value="")
        .col-md-4
          label.form-label(for="produceType") Produce Type
          select#produceType.form-select(name="produceType")
            option(selected) Choose...
            option(value="Organic") Organic
            option(value="Non-Organic") Non-Organic
        .col-md-4
          label.form-label(for="wardName") Ward Name
          select#wardName.form-select(name="wardName")
                    if currentUser 
                          option(value="") Choose...
                          option(value = currentUser._id) #{currentUser.wardName}
                  

        //-     option(selected) Choose...
        //-     option Massaja A
        //-     option Massaja B
        //-     option Massaja C
        //-     option Massaja D
        //- div.
          
          
        .row
          .col-md-4
            label.form-label(for="deliveryMode") Delivery Mode
            select#deliveryMode.form-select(name="deliveryMode")
              option(selected) Choose...
              option(value="InStorePickUp") Pick-Up
              option(value="Home Delivery") Delivery
          .col-md-4
            label.form-label(for="productUploadDate") Date of Upload
            input.form-control#productUploadDate(type="date" name="productUploadDate")
          .col-md-4
              label.form-label(for="productImage") Product Image
              input.form-control#productImage(type="file" name="productImage")
        .col-12.text-center.py-4
          button.btn.btn-primary(type="submit") Upload
