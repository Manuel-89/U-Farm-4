section#productUpload
  .container.justify-content-center
    h3.text-center Farmer-One-Registration
    form.row-g-3(action="/login", method="post")
      .row
        .col-md-6
          label.form-label(for="firstName") First Name
          input.form-control#firstName(type="text")
        .col-md-6
          label.form-label(for="lastName") Last Name
          input.form-control#lastName(type="text")
        div
          .row
            .col-md-4
              label.form-label(for="uniqueId") Unique Id
              input.form-control#uniqueId(type="text")
            .col-md-4
              label.form-label(for="NIN") NIN
              input.form-control#NIN(type="text")
            .col-md-4
              label.form-label(for="inputState") Ward Name
              select#inputState.form-select
                option(selected) Choose...
                option Massaja A.
                option Massaja B.
                option Massaja C.
                option Massaja D.
          .row
            .col-md-4
              label.form-label(for="gender") Gender
              select#Gender.form-select
                option(selected) Choose...
                option Male.
                option Female.
                option Other.
            .col-md-4
              label.form-label(for="productName") Phone Number
              input.form-control#productName(type="text")
            .col-md-4
              label.form-label(for="inputState") Date of birth
              input.form-control#dateOfBirth(type="date")
          .row
            .col-md-4
              label.form-label(for="input") Activities Undertaken
              select#activitiesUndertaken.form-select
                option(selected) Choose...
                option Weeding
                option Harvesting.
                option Planting.
                option Value Addition.
            .col-md-4
              label.form-label(for="type") Residence Type
              select#produceType.form-select
                option(selected) Choose...
                option Permanent
                option Temporary
            .col-md-4.py-4
              .input-group
                label.form-label(for="inputState") Period of stay
                select#inputState.form-select
                  option(selected) Choose...
                  option Massaja A.
                  option Massaja B.
                  option Massaja C.
                  option Massaja D.
          .row
            .col-md-4
              label.form-label(for="productUploadDate") Date of Registration
              input.form-control#productUploadDate(type="date")
            .col-lg-8.py-4
              label.form-label(for="text") Directions
              input.form-control-lg#directions(type="text")
        .row
          .col-12.text-center.py-4
            button.btn.btn-primary(type="submit") Register
