section#urbanFarmerRegistration
  .container.justify-content-center
    h3.text-center Urban-Farmer-Registration
    form.row-g-(action="/registerUrbanFarmer", method="post")
      .row
        .col-md-6
          label.form-label(for="firstName") First Name
          input.form-control#firstName(name="firstName" type="text")
        .col-md-6
          label.form-label(for="lastName") Last Name
          input.form-control#lastName(name= "lastName" type="text")
        div
          .row
            .col-md-4
              label.form-label(for="uniqueId") Unique Id
              input.form-control#uniqueId(name="uniqueID" type="text")
            .col-md-4
              label.form-label(for="NIN") NIN
              input.form-control#NIN(name="NIN" type="text")
            .col-md-4
              label.form-label(for="inputState") Ward Name
              select#inputState.form-select(name = "wardName")
                option(selected) Choose...
                option Massaja A.
                option Massaja B.
                option Massaja C.
                option Massaja D.
          .row
            .col-md-4
              label.form-label(for="gender") Gender
              select#Gender.form-select (name = "gender")
                option(selected) Choose...
                option Male.
                option Female.
                option Other.
            .col-md-4
              label.form-label(for="phone") Phone Number
              input.form-control#productName(name = "phone" type="text")
            .col-md-4
              label.form-label(for="dateOfBirth") Date of birth
              input.form-control#dateOfBirth(name="dateOfBirth" type="date")
          .row
            .col-md-4
              label.form-label(for="input") Activities Undertaken
              select#activitiesUndertaken.form-select(name="activitiesUndertaken")
                option(selected) Choose...
                option Weeding
                option Harvesting.
                option Planting.
                option Value Addition.
            .col-md-8
              label.form-label(for="urbanFarmerRegDate") Date of Registration
              input.form-control#productUploadDate(name="urbanFarmerRegDate" type="date")
        .col-12.text-center.py-5
          button.btn.btn-primary(type="submit") Register
