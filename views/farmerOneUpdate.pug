section#productUpload
  .container.justify-content-center
    
    form.row.g-3(action="/farmerOne/update?id="+farmerOne._id,  method="post")
      h3.text-center farmerOne Update Form     
        .row
           .col-md-4
                label.form-label(for="uniqueId") Unique Id
                input.form-control#uniqueId(name="uniqueId" type="text" value=farmerOne.uniqueId)
       
           .col-md-4
             label.form-label(for="wardName") Ward Name
             select#wardName.form-select(name="wardName")
                option(selected) Choose...
                option(value="Massaja A" selected = farmerOne.wardName == "Massaja A") Massaja A
                option(value="Massaja B" selected = farmerOne.wardName == "Massaja B") Massaja B
                option(value="Massaja C" selected = farmerOne.wardName == "Massaja C") Massaja C
                option(value="Massaja D" selected = farmerOne.wardName == "Massaja D") Massaja D
        .row
           .col-md-4
             label.form-label(for="activitiesUndertaken") Activities Undertaken
              select#activitiesUndertaken.form-select(name="activitiesUndertaken")
                option(selected) Choose...
                option(value="Weeding" selected = farmerOne.activitiesUndertaken == "Weeding") Weeding
                option(value="Harvesting" selected = farmerOne.activitiesUndertaken == "Harvesting") Harvesting
                option(value="Planting" selected = farmerOne.activitiesUndertaken == "Planting") Planting
                option(value="Value Addition" selected = farmerOne.activitiesUndertaken == "Value Addition") Value Addition
           .col-md-4
             label.form-label(for="periodOfStay") Period of stay
              select#periodOfStay.form-select(name="periodOfStay")
                option(selected) Choose...
                option(value="1" selected = farmerOne.periodofStay === "1") 1
                option(value="2" selected = farmerOne.periodofStay === "2") 2
                option(value="3" selected = farmerOne.periodofStay === "3") 3
                option(value="4" selected = farmerOne.periodofStay === "4") 4
                option(value="5" selected = farmerOne.periodofStay === "5") 5
                option(value="6" selected = farmerOne.periodofStay === "6") 6
                option(value="7" selected = farmerOne.periodofStay === "7") 7
                option(value="8" selected = farmerOne.periodofStay === "8") 8
                option(value="9" selected = farmerOne.periodofStay === "9") 9
                option(value="10" selected = farmerOne.periodofStay === "10") 10             

          
      .col-12.text-center.py-4
          button.btn.btn-primary(type="submit") Update
