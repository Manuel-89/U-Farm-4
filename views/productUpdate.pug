section#productUpload
  .container.justify-content-center
    
    form.row.g-3(action="/produce/update?id="+product._id, name="" method="post")
      h3.text-center Product Update Form 
      //- #{currentUser.firstName}
     
      .row
        .col-md-4
          label.form-label(for="produceName") Produce Name
          input.form-control#produceName(name="produceName" type="text" value=product.produceName)
        .col-md-4
          label.form-label(for="produceQuantity") Produce Quantity
          input.form-control#produceQuantity(name="produceQuantity" type="text" value=product.produceQuantity)
        .col-md-4
          label.form-label(for="paymentMethod") Payment Method
          select#deliveryMode.form-select(name="paymentMethod")
              option(selected) Choose...
              option(value="Mobile Money" selected =product.paymentMethod === "Mobile Money") Mobile Money
              option(value="Cash" selected =product.paymentMethod === "Cash") Cash
      .row
        .col-md-4
          label.form-label(for="price") Price
          input.form-control#price(type="text", placeholder="" name="price" value=product.price)             
      .row
        .col-md-4
          label.form-label(for="deliveryMode") Delivery Mode
          select#deliveryMode.form-select(name="deliveryMode")
              option(selected) Choose...
              option(value="InStorePickUp" selected = product.deliveryMode === "InStorePickUp") Pick-Up
              option(value="Home Delivery" selected = product.deliveryMode === "Home Delivery") Delivery
        .col-md-4
          label.form-label(for="productUploadDate") Date of Upload
          input.form-control#productUploadDate(type="date" name="productUploadDate" value=product.productUploadDate)
          
      .col-12.text-center.py-4
          button.btn.btn-primary(type="submit") Update
